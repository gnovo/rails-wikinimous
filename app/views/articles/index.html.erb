<h1>INDEX</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Options</th>
    </tr>
  </thead>

<% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, article %></td>
      <td><%= article.content %></td>
      <td>
        <%= link_to 'edit', edit_article_path(article.id) %>
        <%= link_to 'delete', article, :method => 'delete', data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end -%>
</table>
